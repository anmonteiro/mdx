(library
 (name cli)
 (modules cli)
 (libraries cmdliner fmt.cli logs.fmt fmt.tty logs.cli mdx))

(executable
 (name main)
 (public_name ocaml-mdx)
 (package mdx)
 (link_flags -linkall :standard)
 (modules :standard \ cli)
 (libraries cli mdx mdx_test))

(install
 (section bin)
 (files
  (main.exe as mdx)))
